<!DOCTYPE html>
<html>
<head>
  <title>Select State</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;">
      <h2 class="mb-4 text-center">Select a State</h2>
      <form method="get" action="/polling/lga-results">
        <div class="mb-3">
          <label for="stateSelect" class="form-label">State</label>
          <select class="form-select" id="stateSelect" name="state_id" required>
            <option value="">-- Select State --</option>
            <% states.forEach(state => { %>
              <option value="<%= state.state_id %>"><%= state.state_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="d-grid mb-2">
          <button type="submit" class="btn btn-primary">Continue</button>
        </div>
      </form>
      <!-- Link to New Polling Unit Form -->
      <div class="d-grid">
        <a href="/polling/new-polling-unit" class="btn btn-secondary">Create New Polling Unit</a>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
